<refentry xmlns="http://docbook.org/ns/docbook" xml:id="imagickdraw.getfontsize">
 <refnamediv>
  <refname>ImagickDraw::getFontSize</refname>
  <refpurpose>Retorna o tamanho da fonte em pontos</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <modifier>public</modifier> <type>float</type><methodname>ImagickDraw::getFontSize</methodname>
   <void/>
  </methodsynopsis>
  &warn.undocumented.func;
  <para>
   Retorna o tamanho da fonte usado ao fazer anotações com texto.
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna o tamanho da fonte associado ao objeto <classname>ImagickDraw</classname> atual.
  </para>
 </refsect1>

</refentry>

