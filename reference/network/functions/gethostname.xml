<refentry xml:id="function.gethostname" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>gethostname</refname>
  <refpurpose>Obtém o nome do host</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type class="union"><type>string</type><type>false</type></type><methodname>gethostname</methodname>
   <void/>
  </methodsynopsis>
  <para>
   <function>gethostname</function> obtém o nome de host padrão
   da máquina local.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  &no.function.parameters;
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Retorna uma string com o nome do host em caso de sucesso, caso contrário, &false;
   é retornado.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>Um exemplo simples de <function>gethostname</function></title>
    <programlisting role="php">
<![CDATA[
<?php
echo gethostname(); // pode exibir, por exemplo, "sandie"
?>
]]>
    </programlisting>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>gethostbyname</function></member>
    <member><function>gethostbyaddr</function></member>
    <member><function>php_uname</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
